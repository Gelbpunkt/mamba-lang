// returns the file size
function file_size(filename) {
	f = file(filename, "r");
	file_read(f);
	
	return file_pos(f);
}

function filestat(files) {
	for file in files {
		say format("%s is %.2fkb\n", file, file_size(file) / 1024);
	}
}

filestat(["mamba/lexer.py", "mamba/parser.py", "mamba/ast.py"]);
