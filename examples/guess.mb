num = randrange(1, 100);
tries = 0;

say("Guess the number (1 - 100)\n\n");

for {
	tries += 1;
	guess = int(ask(format("Guess (attempt: %d): ", tries)));
	
	if guess == num {
		say(format("You guessed right with %d attempts", tries));
		exit;
	} else if guess > num {
		say("You guessed too high");
	} else {
		say("You guessed too low");
	}
	
	say("\n");
}
